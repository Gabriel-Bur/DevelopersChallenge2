@model Xayah.Application.ViewModels.Request.OFXUploadViewModelRequest

@{
    ViewData["Title"] = "Upload";
}
<h3>OFXFile Uploader</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Index" method="post" enctype="multipart/form-data">


            <span asp-validation-for="Files" class="text-danger"></span>

            <div class="form-group">
                <input asp-for="Files" type="file" multiple="multiple" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Upload </button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">List of Transactions</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
